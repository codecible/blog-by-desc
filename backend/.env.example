# 服务器配置
HOST=0.0.0.0
PORT=3001

# Monica AI API配置
MONICA_API_KEY=MONICA_API_KEY_STRING
API_ENDPOINT=https://openapi.monica.im/v1
AI_MODEL=gpt-4o-mini
API_TEMPERATURE=0.7
API_MAX_TOKENS=5000
MAX_RETRIES=1
RETRY_DELAY=2

# 安全配置
# 允许的源列表。在生产环境中应该设置为实际的域名列表
# 格式：["http://localhost:3000"] 或 ["*"] 允许所有源
ALLOWED_ORIGINS=["http://localhost:3000"]

# 日志配置
LOG_LEVEL=INFO
LOG_FORMAT="[%(asctime)s] [%(levelname)s] [%(name)s:%(funcName)s:%(lineno)d] %(message)s"

# 缓存配置
CACHE_ENABLED=true
CACHE_EXPIRE_TIME=3600

# 文章生成配置
MIN_WORD_COUNT=1000
MAX_WORD_COUNT=3000
MIN_CORE_WORD_COUNT=300 